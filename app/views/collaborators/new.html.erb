<h1>Manage Collaborators for: </h1>

<!-- <h4><%#= markdown_to_html(@wiki.title) %></h4> -->
<h4><%= @wiki.title %></h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th><h4>Users</h4></th>
        <th>email</th>
        <th>role</th>
        <th>access</th>
    </tr>
  </thead>

  <% @users.each do |user| %>
  <tbody>

    <tr>
      <% if user != current_user %>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>

        <% if @wiki.wiki_collaborators.include?(user) %>
          <td><%= button_to "Remove Collaborator", wiki_collaborator_path(@wiki, user), method: :delete, class: "btn btn-sm btn-danger" %></td>
        <% else %>
          <td><%= button_to "Add Collaborator", wiki_collaborators_path(@wiki, user: user), class: "btn btn-sm btn-success" %></td>
        <% end %>

      <% end %>
    </tr>

  </tbody>

  <% end %>
  <%= link_to "Back to edit", edit_wiki_path(@wiki), class: "btn btn-md btn-primary" %>
</table>
